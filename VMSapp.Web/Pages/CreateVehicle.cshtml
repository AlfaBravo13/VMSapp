@page
@model VMSapp.Web.Pages.CreateVehicleModel
@{
    ViewData["Title"] = "Create new vehicle";
}

<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="@Model.Vehicle.Title" />
    </div>
    <div class="form-group">
        <label>Vehicle number</label>
        <input asp-for="@Model.Vehicle.Number" />
    </div>
    <div class="form-group">
        <label>Build number</label>
        <input asp-for="@Model.Vehicle.BuildNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>